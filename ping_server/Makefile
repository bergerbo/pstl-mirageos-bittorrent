# Generated by Mirage (Thu, 5 Mar 2015 21:04:18 GMT).

LIBS   = -pkgs lwt.syntax,mirage-console.unix,mirage-net-unix,mirage-types.lwt,tcpip.ethif,tcpip.ipv4
PKGS   = mirage-console mirage-net-unix mirage-unix tcpip
SYNTAX = -tags "syntax(camlp4o),annot,bin_annot,strict_sequence,principal"

SYNTAX += -tag-line "<static*.*>: -syntax(camlp4o)"

FLAGS  = -cflag -g -lflags -g,-linkpkg

BUILD  = ocamlbuild -classic-display -use-ocamlfind $(LIBS) $(SYNTAX) $(FLAGS)
OPAM   = opam

export PKG_CONFIG_PATH=$(shell opam config var prefix)/lib/pkgconfig

export OPAMVERBOSE=1
export OPAMYES=1

.PHONY: all depend clean build main.native
all: build

depend:
	$(OPAM) install $(PKGS) --verbose

main.native:
	$(BUILD) main.native

main.native.o:
	$(BUILD) main.native.o

build: main.native
	ln -nfs _build/main.native mir-ping

run: build
	$(SUDO) ./mir-ping

clean:
	ocamlbuild -clean
